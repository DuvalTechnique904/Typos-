@model NewComment

<h2>Leave a Comment</h2>
<p>Help the Typos Community grow and improve by leaving comments!</p>

<form asp-action="PostComment" method="post">
    <div class="form-group">
        <label>Name:</label><input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Comment:</label><input asp-for="Body" class="form-control" />
    </div>

    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Post Comment" />
    </div>
</form>
